<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/row_vertical_margin"
    android:paddingLeft="@dimen/row_horizontal_margin"
    android:paddingRight="@dimen/row_horizontal_margin"
    android:paddingTop="@dimen/row_vertical_margin"
    android:orientation="vertical" >
    
    <!--  ASK Want to use images?  -->
    
    <!--  Title  -->
    <TextView 
        android:id="@+id/row_showsimple_text_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.Holo.Large"
        android:text="== Show title =="
        />
    
    <!--  Info  -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/row_showsimple_text_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@android:style/TextAppearance.Holo"
            android:text="== Status =="
            />
        <TextView 
            android:id="@+id/row_showsimple_text_years"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@android:style/TextAppearance.Holo"
            android:text="YYYY - YYYYY"
            />
        <TextView 
            android:id="@+id/row_showsimple_text_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Holo"
            android:text="XX"
            />
    </LinearLayout>
    

</LinearLayout>
